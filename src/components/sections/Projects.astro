---
import Button from '../ui/Button.astro';
import { t } from '../../utils/i18n';

interface Props {
  lang: string | undefined;
}

const { lang } = Astro.props;

const projects = [
  {
    title: 'SwifDock',
    slug: 'swifdock',
    // image: '/images/projects/db-training.jpg', // No image available
    gradient: 'from-blue-500 to-cyan-400',
    tags: [t('projects.tags.systems', lang), t('projects.tags.swift', lang), t('projects.tags.security', lang)],
    shortDescription: t('projects.swifdock.shortDescription', lang),
    challenge: t('projects.swifdock.challenge', lang),
    approach: t('projects.swifdock.approach', lang),
    result: t('projects.swifdock.result', lang)
  },
  {
    title: 'JWKS Server',
    slug: 'jwks-server',
    // image: '/images/projects/media-dashboard.jpg',
    gradient: 'from-green-500 to-emerald-400',
    tags: [t('projects.tags.security', lang), t('projects.tags.python', lang), t('projects.tags.web', lang)],
    shortDescription: t('projects.jwksServer.shortDescription', lang),
    challenge: t('projects.jwksServer.challenge', lang),
    approach: t('projects.jwksServer.approach', lang),
    result: t('projects.jwksServer.result', lang)
  },
  {
    title: 'PolymorphicCodeVault',
    slug: 'polymorphic-code-vault',
    // image: '/images/projects/explainer-videos.jpg',
    gradient: 'from-purple-500 to-indigo-400',
    tags: [t('projects.tags.cpp', lang), t('projects.tags.java', lang), t('projects.tags.systems', lang)],
    shortDescription: t('projects.polymorphicCodeVault.shortDescription', lang),
    challenge: t('projects.polymorphicCodeVault.challenge', lang),
    approach: t('projects.polymorphicCodeVault.approach', lang),
    result: t('projects.polymorphicCodeVault.result', lang)
  }
];
---

<section id="projects" class="py-16 md:py-24 bg-neutral-bg dark:bg-neutral-dark/60">
  <div class="max-w-container mx-auto px-6">
    <div class="mb-12" data-aos="fade-up">
      <h2 class="font-heading text-h2 text-secondary dark:text-white mb-4">{t('projects.title', lang)}</h2>
      <p class="text-secondary/70 dark:text-white/70 max-w-2xl">
        {t('projects.subtitle', lang)}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
      {projects.map((project, index) => (
        <div
          class="md:col-span-4 group bg-white dark:bg-neutral-dark border border-gray-100 dark:border-gray-800 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all duration-300"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class={`relative overflow-hidden aspect-video bg-gradient-to-br ${project.gradient}`}>
            {/* Geometric Pattern Overlay */}
            <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 20px 20px;"></div>
            
            <div class="absolute top-4 left-4 flex flex-wrap gap-2">
              {project.tags.map(tag => (
                <span class="px-3 py-1 text-xs font-mono bg-white/90 dark:bg-neutral-dark/90 backdrop-blur-sm text-primary rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            
            <div class="absolute bottom-4 left-4 right-4">
               <h3 class="font-heading text-xl text-white font-bold drop-shadow-md">
                 {project.title}
               </h3>
            </div>
          </div>

          <div class="p-6">
            <p class="text-secondary/70 dark:text-white/70 mb-6 text-sm">
              {project.shortDescription}
            </p>

            {/* Changed to external link or placeholder since internal pages don't exist */}
            <a
              href="https://github.com/meetsaspara" 
              target="_blank"
              class="inline-flex items-center justify-center rounded-lg font-medium text-sm py-2 px-4 border border-primary text-primary hover:bg-primary/10 bg-transparent transition-colors"
            >
              {t('projects.buttonText', lang)}
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center" data-aos="fade-up">
      <a
        href="https://github.com/meetsaspara"
        target="_blank"
        class="inline-flex items-center justify-center rounded-lg font-medium text-base py-3 px-8 bg-primary text-white hover:bg-primary/90 transition-colors shadow-lg hover:shadow-xl"
      >
        {t('projects.allProjectsButtonText', lang)}
      </a>
    </div>
  </div>
</section>
